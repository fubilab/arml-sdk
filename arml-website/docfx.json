{
  "metadata": [
    {
      "src": [
        {
          "src": "../arml-unity/Assets/ARML/ARMLCore",
          "files": [
            "**/*.cs"
          ]
        }
      ],
      "filter": "filterConfig.yml",
      "dest": "api",
      "allowCompilationErrors": true,
      "namespaceLayout": "nested",
      "categoryLayout": "nested"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "toc.yml",
          "index.md",
          "api/**/*.{md,yml}",
          "docs/**/*.{md,yml}",
          "media/**/*.{md,yml}"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "docs/images/**",
          "media/images/**",
          "media/assets/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "template"
    ],
    "globalMetadata": {
      "_appName": "ARML SDK",
      "_appTitle": "ARML SDK",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_appLogoPath": "public/ARML-logo-circular.png",
      "pdf": false
    },
    "fileMetadata": {
      "_disableTocFilter": {
          "**": true,
          "api/**": false
      }
    },
    "markdownEngineProperties": {
      "markdigExtensions": [
        "FootNotes"
      ]
    }
  }
}