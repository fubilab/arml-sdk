{
  "metadata": [
    {
      "src": [
        {
          "src": "../arml-unity/Assets/ARML/ARMLCore",
          "files": [
            "**/*.cs"
          ]
        }
      ],
      "filter": "filterConfig.yml",
      "dest": "api",
      "allowCompilationErrors": true,
      "namespaceLayout": "nested",
      "categoryLayout": "nested"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "node_modules/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "docs/images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "template"
    ],
    "globalMetadata": {
      "_appName": "ARML SDK",
      "_appTitle": "ARML SDK",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_appLogoPath": "public/ARML-logo-circular.png",
      "pdf": false
    }
  }
}